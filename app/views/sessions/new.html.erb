<div class="depot_form">
<% if flash[:alert] %>
  <p id="notice"><%= flash[:alert] %></p>
      <% end %>

  <%= form_tag do %>
  <feildset>
    <legend>Please enter yor login and password</legend>

    <div>
      <%= label_tag :name, 'Name:' %>
      <%= text_field_tag :name, params[:name] %>
    </div>

    <div>
      <%= label_tag :password, 'Password:' %>
      <%= password_field_tag :password, params[:password] %>
    </div>

    <div>
      <%= submit_tag 'Login' %>
    </div>
  </feildset>
      <% end %>
</div>